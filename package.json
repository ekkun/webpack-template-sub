{
    "name": "@hamworks/rkb",
    "version": "0.0.1",
    "private": true,
    "description": "",
    "repository": {
        "type": "git",
        "url": "git@gitlab.com:hamworks/rkb/rkb.git"
    },
    "scripts": {
        "bs": "browser-sync start --config bs-config.js",
        "build": "npm run clean && npm run build:css && cross-env NODE_ENV=production TZ='Asia/Tokyo' npm run build:all",
        "build:all": "npm run build:js && npm run build:html && npm run build:img && npm run build:css && npm run build:json",
        "build:css": "cross-env NODE_ENV=production postcss ./src/assets/css/[^_]*.css --no-map --dir ./htdocs/online/assets/css --verbose",
        "build:js": "cross-env NODE_ENV=production webpack --verbose",
        "build:img": "npm run clean:img && node imagemin.js",
        "build:html": "eleventy",
        "build:json": "cpx -C ./src/assets/json/** ./htdocs/online/assets/json",
        "clean": "rimraf htdocs",
        "clean:img": "rimraf htdocs/online/assets/images",
        "watch": "run-p bs watch:css watch:js watch:img watch:html",
        "watch:css": "npm run build:css -- -w",
        "watch:js": "webpack --watch",
        "watch:img": "onchange './src/assets/images' -- npm run build:img",
        "watch:html": "eleventy --watch",
        "watch:json": "npm run build:json -- -w",
        "eslint": "eslint ./htdocs",
        "start": "cross-env NODE_ENV=production run-s clean build:all watch",
        "stylelint": "stylelint \"./htdocs/**/*.css\"",
        "test": "npm run eslint & npm run stylelint"
    },
    "dependencies": {
        "@babel/polyfill": "^7.8.7",
        "@vimeo/player": "^2.13.0",
        "normalize.css": "^8.0.1"
    },
    "devDependencies": {
        "@11ty/eleventy": "^0.11.0",
        "@11ty/eleventy-plugin-rss": "^1.0.9",
        "@babel/plugin-transform-react-jsx": "^7.10.4",
        "@babel/preset-env": "^7.11.5",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "browser-sync": "^2.26.12",
        "core-js": "3",
        "cpx": "^1.5.0",
        "cross-env": "^7.0.2",
        "css-loader": "^4.3.0",
        "cssnano": "^4.1.10",
        "dotenv": "^8.2.0",
        "eslint": "^7.9.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^24.0.1",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-standard": "^4.0.1",
        "fs": "^0.0.1-security",
        "html-minifier": "^4.0.0",
        "imagemin-cli": "^6.0.0",
        "imagemin-gifsicle": "^7.0.0",
        "imagemin-keep-folder": "^5.3.2",
        "imagemin-mozjpeg": "^9.0.0",
        "imagemin-pngquant": "^9.0.1",
        "imagemin-svgo": "^8.0.0",
        "node-fetch": "^2.6.1",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.0.2",
        "postcss-cli": "^7.1.2",
        "postcss-import": "^12.0.1",
        "postcss-loader": "^4.0.2",
        "postcss-omit-import-tilde": "^1.0.1",
        "postcss-preset-env": "^6.7.0",
        "postcss-uncss": "^0.17.0",
        "postcss-url": "^8.0.0",
        "regenerator-runtime": "^0.13.7",
        "rimraf": "^3.0.2",
        "style-loader": "^1.2.1",
        "stylelint": "^13.7.1",
        "stylelint-config-standard": "^20.0.0",
        "swiper": "5.4.5",
        "throttle-debounce": "^2.3.0",
        "uncss": "^0.17.3",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12"
    },
    "engines": {
        "node": "^14",
        "npm": "^6.14.8"
    }
}
